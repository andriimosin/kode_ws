</head>
<body class="homepage">

  <!-- Header -->
    <div id="header">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
          <!-- Inner -->
      <div class="inner">
        <header>
          <h1><a href="#" id="logo">Kode.WS</a></h1>
          <hr />
          <span class="byline">One more blog about coding</span>
        </header>
        <footer>
          <a href="#banner" class="button circled scrolly">Check it</a>
        </footer>
      </div>

      <!-- Nav -->
      <nav id="nav">
        <ul>
          <li><%= link_to 'Home', root_path %></li>
